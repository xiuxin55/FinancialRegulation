<Window x:Class="FinancialRegulation.Page.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageWindow" Height="300" Width="300" x:Name="MessageWin">
    <Window.Resources>
        <ControlTemplate x:Key="Show">
            <StackPanel Height="100" >
                <TextBlock x:Name="MessageTitle" Height="23" Text="请输入账户余额" HorizontalAlignment="Center" Margin="0,5" />
                <TextBox Height="23" x:Name="MessageContent" Width="120" Text="{Binding Result, Mode=TwoWay}" Margin="0,5"/>
                <Button Content="确定" Height="23" Name="MessageButton" Width="75" Click="MessageButton_Click" Margin="0,5" />
            </StackPanel>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <UserControl Template="{StaticResource Show}" DataContext="{Binding .,ElementName=MessageWin}"/>
    </Grid>
</Window>
